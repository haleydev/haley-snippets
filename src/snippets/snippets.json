{
  "Extend layout": {
    "prefix": "@",
    "body": "@if('${1:name}') ",
    "description": "PHP if"
  },

  "v-if": {
    "prefix": "if",
    "body": [
      "@if($1)",
      "    $2",
      "@endif"
    ],
    "description": "php if"
  },
  "v-else": {
    "prefix": "else",
    "body": [
      "@else",
      "    $1"  
    ],
    "description": "php else"
  },




  

  "v-foreach": {
    "prefix": "foreach",
    "body": [
      "@foreach ($1)",
      "    $2",
      "@endforeach"
    ],
    "description": "php foreach"
  }
}