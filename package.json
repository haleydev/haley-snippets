{
    "name": "haley-view",
    "displayName": "Haley View Snippets",
    "description": "Snippets, Syntax Highlighting and Formatting for VS Code",
    "publisher": "haleydev",
    "version": "1.0.0",
    "author": {
        "name": "Warley Rodrigues de Moura",
        "email": "haleydev@hotmail.com"
    },
    "homepage": "https://github.com/haleydev/haley-snippets",
    "repository": {
        "type": "git",
        "url": "https://github.com/haleydev/haley-snippets"
    }, 
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#545454",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "keywords": [
        "view",    
        "snippet",
        "highlighter",
        "beautify"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "haley",
                "aliases": [
                    "Haley",
                    "haley"
                ],
                "extensions": [                  
                    "haley"
                ],
                "icon": {
                    "light": "./images/icon.png",
                    "dark": "./images/icon.png"
                }
            },
            {
                "id": "view",
                "aliases": [
                    "View",
                    "view"                   
                ],
                "extensions": [
                    ".view.php",
                    "view"                   
                ],
                "firstLine": "^#!\\s*/.*\\bphp\\b",
                "mimetypes": [
                    "application/x-php"
                ],
                "configuration": "./src/languages/view.configuration.json",
                "icon": {
                    "light": "./images/icon.png",
                    "dark": "./images/icon.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "view",
                "scopeName": "text.html.php.view",
                "path": "./src/syntaxes/view.tmLanguage.json",
                "embeddedLanguages": {
                    "source.php": "php",
                    "source.css": "css",
                    "source.js": "javascript"
                }
            }
        ],
        "snippets": [
            {
                "language": "view",
                "path": "./src/snippets/snippets.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:view"
    ],
    "devDependencies": {
        "@types/node": "^16.18.16",
        "@types/vscode": "^1.46.0",
        "ts-loader": "^9.4.2",
        "typescript": "^5.0.2",
        "webpack": "^5.76.2",
        "webpack-cli": "^5.0.1"
    },
    "dependencies": {
        "vscode-css-languageservice": "^6.2.4",
        "vscode-html-languageservice": "^4.2.5",
        "vscode-languageclient": "^6.1.4",
        "vscode-languageserver-types": "^3.17.3"
    }
}